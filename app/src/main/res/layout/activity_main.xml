<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rosemberg.intentapplication2.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurações"
            android:id="@+id/config"
            android:layout_gravity="center_horizontal"
            android:onClick="configuracoes"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Maps"
            android:id="@+id/maps"
            android:layout_gravity="center_horizontal"
            android:onClick="googleMaps"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Musica"
            android:id="@+id/music"
            android:layout_gravity="center_horizontal"
            android:onClick="musica"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nº celular"
            android:ems="10"
            android:id="@+id/nCell"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Mensagem"
            android:ems="10"
            android:id="@+id/mensagem"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sms"
            android:id="@+id/sms"
            android:layout_gravity="center_horizontal"
            android:onClick="sms"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Hora"
            android:ems="10"
            android:id="@+id/hora"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Minuto"
            android:ems="10"
            android:id="@+id/minuto"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarme"
            android:id="@+id/alarme"
            android:layout_gravity="center_horizontal"
            android:onClick="alarme"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Busca"
            android:ems="10"
            android:id="@+id/editBusca"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:id="@+id/buscar"
            android:layout_gravity="center_horizontal"
            android:onClick="buscaNaWeb"/>

    </LinearLayout>
</RelativeLayout>
